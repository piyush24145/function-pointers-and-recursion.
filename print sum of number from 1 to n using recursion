#include <stdio.h>
void sum(int n,int s){ // n=5 and s=0
       if(n==0)  {
       printf("%d\n",s);
       return ;}
       sum(n-1,s+n);   // recursive call  // (4,5)
                       
    return ;
} 
int main(){
    int n,s ;
    printf("enter n :");
    scanf("%d",&n);
    printf("enter s;");
    scanf("%d",&s);
    sum(n,0); //call
    return 0;
}
